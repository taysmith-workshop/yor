{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Sample EBS Volume with EC2 instance template",
  "Resources": {
    "NewVolume": {
      "Type": "AWS::EC2::Volume",
      "Properties": {
        "Size": 100,
        "Encrypted": true,
        "Tags": [
          {
            "Key": "MyTag",
            "Value": "TagValue"
          },
          {
            "Key": "RegionTag",
            "Value": {
              "Ref": "AWS::Region"
            }
          },
          {
            "Key": "yor_trace",
            "Value": "b98d47f1-0e83-4001-be09-9094333dd232"
          }
        ],
        "AvailabilityZone": "us-west-2a"
      },
      "DeletionPolicy": "Snapshot"
    }
  },
  "Outputs": {
    "VolumeId": {
      "Value": "NewVolume",
      "Export": {
        "Name": "NewVolume"
      }
    }
  }
}